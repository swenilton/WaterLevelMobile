<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:background="@drawable/list_selector"
    android:clickable="true"
    android:contextClickable="true">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUsuario"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/lblPosicao"
        android:layout_marginLeft="5dp" />
    <TextView
        android:id="@+id/textDescricao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textSize="18sp"
        android:textColor="#333333"
        android:paddingLeft="5dp"
        android:layout_alignTop="@+id/imgUsuario"
        android:layout_toEndOf="@+id/imgUsuario" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1ยบ"
        android:id="@+id/lblPosicao"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tempo:"
        android:id="@+id/lblTempo"
        android:textSize="12dp"
        android:layout_alignTop="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginEnd="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="20min"
        android:id="@+id/textView"
        android:textSize="12dp"
        android:layout_alignTop="@+id/lblGasto"
        android:layout_toStartOf="@+id/lblGasto"
        android:layout_marginRight="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gasto:"
        android:id="@+id/lblGasto"
        android:textSize="12dp"
        android:layout_alignBottom="@+id/imgUsuario"
        android:layout_toStartOf="@+id/textView2"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="20L"
        android:id="@+id/textView2"
        android:textSize="12dp"
        android:layout_alignTop="@+id/lblGasto"
        android:layout_alignParentEnd="true" />

</RelativeLayout>